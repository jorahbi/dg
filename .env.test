# 测试环境配置
APP_SERVER__HOST=127.0.0.1
APP_SERVER__PORT=8080
APP_SERVER__WORKERS=1
APP_SERVER__KEEP_ALIVE=30
APP_SERVER__TIMEOUT=10

# 数据库配置 - 使用SQLite进行测试
APP_DATABASE__URL=sqlite::memory:

# JWT配置
APP_JWT__SECRET=test-jwt-secret-key-for-development-only
APP_JWT__EXPIRATION=3600
APP_JWT__REFRESH_EXPIRATION=86400
APP_JWT__ISSUER=coin-dgai-api-test
APP_JWT__AUDIENCE=coin-dgai-users-test

# CORS配置
APP_CORS__ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
APP_CORS__ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
APP_CORS__ALLOWED_HEADERS=["*"]
APP_CORS__EXPOSE_HEADERS=[]
APP_CORS__MAX_AGE=86400
APP_CORS__CREDENTIALS=true

# 文件上传配置
APP_UPLOAD__MAX_FILE_SIZE=1048576
APP_UPLOAD__ALLOWED_EXTENSIONS=["jpg", "jpeg", "png"]
APP_UPLOAD__UPLOAD_PATH=test-uploads
APP_UPLOAD__BASE_URL=http://localhost:8080/test-uploads

# 安全配置
APP_SECURITY__BCRYPT_COST=4
APP_SECURITY__MAX_LOGIN_ATTEMPTS=3
APP_SECURITY__ACCOUNT_LOCK_DURATION=900
APP_SECURITY__PASSWORD_MIN_LENGTH=6
APP_SECURITY__PASSWORD_REQUIRE_SPECIAL_CHARS=false
APP_SECURITY__PASSWORD_REQUIRE_NUMBERS=false
APP_SECURITY__PASSWORD_REQUIRE_UPPERCASE=false
APP_SECURITY__RATE_LIMIT_REQUESTS=1000
APP_SECURITY__RATE_LIMIT_WINDOW=60

# 应用配置
APP_APP__NAME=Astra Ai API Test
APP_APP__VERSION=1.0.0-test
APP_APP__ENVIRONMENT=test
APP_APP__LOG_LEVEL=info
APP_APP__DEBUG=false
APP_APP__TIMEZONE=UTC