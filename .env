# 服务器配置
APP_SERVER__HOST=0.0.0.0
APP_SERVER__PORT=8081
APP_SERVER__WORKERS=4
APP_SERVER__KEEP_ALIVE=75
APP_SERVER__TIMEOUT=30
APP_SERVER_URL=http://localhost:3000

# 数据库配置
APP_DATABASE__URL=mysql://root:@127.0.0.1:3306/coin_dgai
APP_DATABASE__MAX_CONNECTIONS=20
APP_DATABASE__MIN_CONNECTIONS=5
APP_DATABASE__CONNECTION_TIMEOUT=30
APP_DATABASE__IDLE_TIMEOUT=600
APP_DATABASE__MAX_LIFETIME=1800

# JWT配置
APP_JWT__SECRET=your-super-secret-jwt-key-change-this-in-production
APP_JWT__EXPIRATION=86400
APP_JWT__REFRESH_EXPIRATION=604800
APP_JWT__ISSUER=coin-dgai-api
APP_JWT__AUDIENCE=coin-dgai-users

# CORS配置
APP_CORS__ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080"
APP_CORS__ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
APP_CORS__ALLOWED_HEADERS="*"
APP_CORS__EXPOSE_HEADERS=""
APP_CORS__MAX_AGE=86400
APP_CORS__CREDENTIALS=true

# 文件上传配置
APP_UPLOAD__MAX_FILE_SIZE=5242880
APP_UPLOAD__ALLOWED_EXTENSIONS="jpg,jpeg,png,gif,webp"
APP_UPLOAD__UPLOAD_PATH=assets

# 安全配置
APP_SECURITY__BCRYPT_COST=12
APP_SECURITY__MAX_LOGIN_ATTEMPTS=5
APP_SECURITY__ACCOUNT_LOCK_DURATION=1800
APP_SECURITY__PASSWORD_MIN_LENGTH=8
APP_SECURITY__PASSWORD_REQUIRE_SPECIAL_CHARS=true
APP_SECURITY__PASSWORD_REQUIRE_NUMBERS=true
APP_SECURITY__PASSWORD_REQUIRE_UPPERCASE=true
APP_SECURITY__RATE_LIMIT_REQUESTS=100
APP_SECURITY__RATE_LIMIT_WINDOW=60

# 应用配置
APP_APP__NAME="Astra Ai API"
APP_APP__VERSION=1.0.0
APP_APP__ENVIRONMENT=development
APP_APP__LOG_LEVEL=debug
APP_APP__DEBUG=true
APP_APP__TIMEZONE=UTC